<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />
    <Button
        android:id="@+id/fanhui"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="返回原位置"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@+id/scan"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="开启扫描二维码"
        android:layout_above="@+id/fanhui"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@+id/chakandingdan"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="查看订单"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="200dp"
        android:visibility="gone"/>
    <Button
        android:id="@+id/lu1"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="查看路径导航"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="250dp"
        android:visibility="gone"/>
    <Button
        android:id="@+id/lu2"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="查看路径导航"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="250dp"
        android:visibility="gone"/>
    <Button
        android:id="@+id/lu3"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="查看路径导航"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="250dp"
        android:visibility="gone"/>
    <Button
        android:id="@+id/lu4"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="查看路径导航"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="250dp"
        android:visibility="gone"/>
    <Button
        android:id="@+id/lu5"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="查看路径导航"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="250dp"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/rl_marker"
        android:layout_alignParentTop="true"
        android:background="#d8fff9"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="260dp"
        android:clickable="true"
        android:layout_margin="5dp"
        android:animateLayoutChanges="true">
        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_below="@id/iv_img"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:textSize="14sp"
            android:textColor="#000000"/>
        <Button
            android:id="@+id/yuyue"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_description"
            android:text="点击查看车位信息"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="90dp"/>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/xiangxi"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentTop="true"
        android:background="#fffcfc"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_margin="12dp"
        android:animateLayoutChanges="true">
        <TextView
            android:id="@+id/shuru1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="5dp"
            android:textSize="20sp"
            android:textColor="#0e0e0e"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            android:background="#000000"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车位信息"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/shuru2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                />
        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车主姓名"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/shuru3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/queren"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="58dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="扫码确认停车"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dingdan"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="#fffcfc"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#000000"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="车位订单详情"
                    android:textSize="20dp"
                    android:textColor="#ffffff"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="停车时间(0.02元/秒)"
                android:textSize="18dp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginTop="20dp"/>

            <Chronometer
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:format="00:00:00"
                android:textSize="35dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="开始停车"
                android:onClick="startClick"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="结束停车"
                android:onClick="stopClick1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_dd"
                android:layout_width="150dp"
                android:layout_height="80dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="车位号:"
                        android:textColor="#000"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/chewei"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:text="车主："/>
                    <TextView
                        android:id="@+id/chezhu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="20dp"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ganxie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="此订单详情"
                android:textSize="20dp"
                android:textColor="#ff0000"/>
            <TextView
                android:id="@+id/chorm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="28dp"
                android:textColor="#ff0000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="本次停车总共花费"
                android:textSize="20dp"
                android:textColor="#ff0000"/>
            <TextView
                android:id="@+id/cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="28dp"
                android:textColor="#ff0000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="感谢使用扫码定位停车服务"
                android:textSize="20dp"
                android:textColor="#ff0000"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/shurutushuma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="12dp"
        android:background="#fffcfc"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#000000"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="输入停车码"
                    android:textSize="20dp"
                    android:textColor="#ffffff"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/tushuma"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:hint="请输入停车码"
                android:paddingLeft="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="请输入停车二维码条形码的数字"
                android:textColor="#000"
                android:gravity="center" />
            <Button
                android:id="@+id/kaishiyuedu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="#000000"
                android:text="开始停车"
                android:textColor="#cfcdcd"
                android:textSize="20dp" />
            <Button
                android:id="@+id/erweima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="#51e1ed86"
                android:text="扫取二维码/条形码"
                android:padding="15dp"/>

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/saoma1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="#fffcfc"
        android:visibility="gone">
        <Button
            android:id="@+id/btn_scan1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始扫描"
            android:textSize="18dp"
            android:textColor="#000000"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/iv_image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_hint1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="这是扫描返回的图像"
                android:textColor="#ff0000" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_result1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff0000"/>
        <Button
            android:id="@+id/find1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确认停车并建立标志点"
            android:textSize="18dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/saoma"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="#fffcfc"
        android:visibility="gone">
        <Button
            android:id="@+id/btn_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始扫描"
            android:textSize="18dp"
            android:textColor="#000000"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="这是扫描返回的图像"
                android:textColor="#ff0000" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff0000"/>
        <Button
            android:id="@+id/find"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="处理扫描结果并定位自己所在的位置"
            android:textSize="18dp"/>
    </LinearLayout>

</RelativeLayout>