
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dbdaec"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_login_title"
            android:textSize="20sp"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_login_register"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:textSize="18sp"
            android:layout_marginRight="16dp"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_gravity="center"
        android:background="@drawable/login_image"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:hint="请输入用户名"
        android:background="#FFFFFF"
        android:paddingLeft="16dp"
        android:id="@+id/username"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="请输入密码"
        android:background="#FFFFFF"
        android:layout_marginTop="5dp"
        android:paddingLeft="16dp"
        android:inputType="textPassword"
        android:id="@+id/password"/>

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="20dp"
        android:background="@drawable/login_page_login_button" />
    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="20dp"
        android:background="#49f233"
        android:text="注册"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="此APP Tomcat服务已成功和阿里云服务器完成数据连接"
            android:textColor="#ff0d01"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数据库操作是在服务器上所以要联网。"
            android:textColor="#ff0d01"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐注册一个新的用户，不但完成连接数据库的要求并且完成云端操作。"
            android:textColor="#ff0d01"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默认用户000 密码000。"
            android:textSize="10dp"
            android:textColor="#94837777"/>


    </LinearLayout>
</LinearLayout>